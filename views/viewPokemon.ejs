<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheets/pokedexStyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/viewPokemonStyle.css">
    <link rel="stylesheet" href="/stylesheets/navbarStyle.css">
    <title>Title</title>


</head>
<body>
<nav id="navbar">
    <div id="Pokeball"></div>
    <div id="navbarContent">
        <ul><li><a href="/">Home</a></li></ul>
        <ul><li><a href="/pokedex">Pokedex</a></li></ul>
        <ul><li><a href="/users/createAccount">Create Account</a></li></ul>
    </div>
    <div id="navBlackBox"></div>
</nav>

<script>
    const pokemon = <%- JSON.stringify(pokemon)%>;
    window.pokemonSearchID = pokemon.dexNo; //

</script>
<div class="pokemon-container">
    <div class="top-section">
        <div class="image-column">
            <div class="image-box"><img src="<%= pokemon.image%>" alt="<%= pokemon.name%>" class="pokemon-image" id="pokemon-sprite-area"></div>
            <div class="action-buttons">
                <button class="btn" onclick="switchSprite()" id="spriteBtn">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" className="size-6">
                        <path strokeLinecap="round" strokeLinejoin="round" d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09ZM18.259 8.715 18 9.75l-.259-1.035a3.375 3.375 0 0 0-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 0 0 2.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 0 0 2.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 0 0-2.456 2.456ZM16.894 20.567 16.5 21.75l-.394-1.183a2.25 2.25 0 0 0-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 0 0 1.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 0 0 1.423 1.423l1.183.394-1.183.394a2.25 2.25 0 0 0-1.423 1.423Z" />
                    </svg>
                </button>
                <button class="btn" id="cryBtn"><i class="fa-solid fa-volume-high"></i></button>
            </div>
        </div>


        <audio id="cry" src="<%= pokemon.cry%>"></audio>

        <div class="info-column">
            <div class="info-box">
                <div class="pokemon-header">
                    <h2 class="pokemon-name">#<%= pokemon.dexNo %> – <%= pokemon.name %></h2>
                    <div class="nav-buttons-inline">
                        <button class="nav-btn" id="prevBtn">‹</button>
                        <button class="nav-btn" id="nextBtn">›</button>
                    </div>
                </div>


                <div class="info-row"><span class="label">Type:</span> <span class="value"><%= pokemon.type %></span></div>
                <div class="info-row"><span class="label">Height:</span> <span class="value"><%= pokemon.height %> ft</span></div>
                <div class="info-row"><span class="label">Weight:</span> <span class="value"><%= pokemon.weight %> lbs</span></div>

                <div class="info-row abilities-row">
                    <div class="label">Abilities:</div>
                    <div class="abilities-grid">
                        <% pokemon.abilities.forEach(function(ability) { %>
                            <div class="ability-pill"><%= ability %></div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="section">
        <h3>Pokédex Descriptions</h3>
        <div class="description-scroll">
            <% pokemon.descriptions.forEach(desc => { %>
                <p><%= desc %></p>
            <% }) %>
        </div>
    </div>


        <div class="section">
            <h3>Base Stats</h3>
            <div class="content-box">
                <canvas id="statsChart" width="400" height="300"></canvas>
            </div>
        </div>


    <div class="section">
        <h3>Moves</h3>
        <div class="moves-scroll">
            <div class="moves-grid">
                <% pokemon.moves.forEach(function(move) { %>
                    <div class="move-box"><%= move %></div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

</div>

<footer>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="../javascripts/viewPokemonJS.js"></script>

</footer>
</body>
</html>
